{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watchAll",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-config-form",
  "author": "Sreejit De",
  "description": "A lightweight React component for creating highly customizable and accessible forms easily, just using a config object",
  "keywords": [
    "react",
    "react-dom",
    "react-config-form",
    "form",
    "forms",
    "config",
    "customizable",
    "accessible"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Sreejit7/react-config-form"
  },
  "homepage": "https://formbuildr.vercel.app",
  "bugs": {
    "url": "https://github.com/Sreejit7/react-config-form/issues"
  },
  "module": "dist/react-config-form.esm.js",
  "size-limit": [
    {
      "path": "dist/react-config-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-config-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "husky": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^8.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^3.9.10"
  }
}
